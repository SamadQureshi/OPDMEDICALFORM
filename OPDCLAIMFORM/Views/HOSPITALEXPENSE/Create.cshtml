        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.DRUGS_PRESCRIBED_BOOL)
                @Html.ValidationMessageFor(model => model.DRUGS_PRESCRIBED_BOOL, "", new { @class = "text-danger" })
            </div>
        </div>
