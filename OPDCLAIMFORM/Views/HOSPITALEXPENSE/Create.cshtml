    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HOSPITAL_NAME, "Name of Hospital:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HOSPITAL_NAME, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HOSPITAL_NAME, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DOCTOR_NAME, "Name of Doctor:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
