    <div class="form-group">
        @Html.LabelFor(model => model.DRUGS_PRESCRIBED_DESCRIPTION, "Drugs Description:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.DRUGS_PRESCRIBED_DESCRIPTION, 2, 40, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DRUGS_PRESCRIBED_DESCRIPTION, "", new { @class = "text-danger" })
