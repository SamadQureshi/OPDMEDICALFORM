        </dt>

        <dd>
            @Html.DisplayFor(model => model.opdEXPENSE.CLAIM_MONTH)
        </dd>

        <dt>
            @Html.DisplayName("Total Amount Claimed")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.opdEXPENSE.TOTAL_AMOUNT_CLAIMED)
