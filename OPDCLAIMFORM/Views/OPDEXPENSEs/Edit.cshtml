        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.opdEXPENSE.EMPLOYEE_DEPARTMENT, "Employee Department", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.opdEXPENSE.EMPLOYEE_DEPARTMENT, new List<SelectListItem>
    {
               new SelectListItem {Text = "Consulting", Value = "Consulting"},
               new SelectListItem {Text = "Qorsquad", Value = "Qorsquad"},
               new SelectListItem {Text = "Product", Value = "Product"},
               new SelectListItem {Text = "SalesAndMarketing", Value = "SalesAndMarketing"},

            }, new { @class = "form-control select2_demo_4" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.opdEXPENSE.CLAIM_MONTH, "Claim For Month", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.opdEXPENSE.CLAIM_MONTH, new List<SelectListItem>
            {
                       new SelectListItem {Text = "JAN", Value = "JAN"},
                       new SelectListItem {Text = "FEB", Value = "FEB"},
                       new SelectListItem {Text = "MAR", Value = "MAR"},
                       new SelectListItem {Text = "APR", Value = "APR"},
                       new SelectListItem {Text = "MAY", Value = "MAY"},
                       new SelectListItem {Text = "JUN", Value = "JUN"},
                       new SelectListItem {Text = "JUL", Value = "JUL"},
                       new SelectListItem {Text = "AUG", Value = "AUG"},
                       new SelectListItem {Text = "SEP", Value = "SEP"},
                       new SelectListItem {Text = "OCT", Value = "OCT"},
                       new SelectListItem {Text = "NOV", Value = "NOV"},
                       new SelectListItem {Text = "DEC", Value = "DEC"},

                    }, new { @class = "form-control select2_demo_4" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.opdEXPENSE.CLAIM_YEAR, "Claim For Year", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.opdEXPENSE.CLAIM_YEAR, new List<SelectListItem>
        {
                   new SelectListItem {Text = "2020", Value = "2020"},
                   new SelectListItem {Text = "2021", Value = "2021"},
                   new SelectListItem {Text = "2022", Value = "2022"},
                   new SelectListItem {Text = "2023", Value = "2023"},
                   new SelectListItem {Text = "2024", Value = "2024"},
                   new SelectListItem {Text = "2025", Value = "2025"},
                   new SelectListItem {Text = "2026", Value = "2026"},
                   new SelectListItem {Text = "2027", Value = "2027"},
                   new SelectListItem {Text = "2028", Value = "2028"},
                   new SelectListItem {Text = "2029", Value = "2029"},
                   new SelectListItem {Text = "2030", Value = "2030"},
                   new SelectListItem {Text = "2031", Value = "2031"},

                }, new { @class = "form-control select2_demo_4" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.opdEXPENSE.TOTAL_AMOUNT_CLAIMED, "Total Amount Claimed", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.opdEXPENSE.TOTAL_AMOUNT_CLAIMED, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.opdEXPENSE.TOTAL_AMOUNT_CLAIMED, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.opdEXPENSE.STATUS, "STATUS", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.opdEXPENSE.STATUS, new List<SelectListItem>
                    {
                       new SelectListItem{ Text="InProcess", Value = "InProcess" },
                       new SelectListItem{ Text="Submitted", Value = "Submitted" },

                    }, new { @class = "form-control select2_demo_4" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}
<div>
    <h5>PATIENT INFORMATION</h5>
    <hr style="height:2px;border:none;color:#333;background-color:#333;">
    @Html.ActionLink("Add Patient Information", "Index", "OPDEXPENSEPATIENT", new { id = @ViewData["OPDEXPENSE_ID"] }, null)
    <br />
    @if (Model.listOPDEXPENSEPATIENT != null && Model.listOPDEXPENSEPATIENT.Count > 0)
    {
        <div class="row">
            <div class="col-md-offset-1 col-md-8">
                <section>
                    <table id="tblCustomers" class="table table-bordered table-striped">
                        <tr>
                            <th style="width:100px">Sr.</th>
                            <th style="width:150px">Name</th>
                            <th style="width:150px">Age</th>
                            <th style="width:150px">RelationShip</th>
                            <th style="width:150px">Delete</th>
                        </tr>

                        @foreach (OPDEXPENSE_PATIENT customer in Model.listOPDEXPENSEPATIENT)
                        {
                            <tr>
                                <td class="ID">
                                    <span>@customer.ID</span>
                                </td>
                                <td class="NAME">
                                    <span>@customer.NAME</span>
                                    <input type="text" value="@customer.NAME" style="display:none" />
                                </td>
                                <td class="AGE">
                                    <span>@customer.AGE</span>
                                    <input type="text" value="@customer.AGE" style="display:none" />
                                </td>
                                <td class="RELATIONSHIP_EMPLOYEE">
                                    <span>@customer.RELATIONSHIP_EMPLOYEE</span>
                                    <select id="relationShipListForEdit" style="display:none">
                                        <option value="SELF">SELF</option>
                                        <option value="FATHER">FATHER</option>
                                        <option value="MOTHER">MOTHER</option>
                                        <option value="SPOUSE">SPOUSE</option>
                                        <option value="DAUGHTER">DAUGHTER</option>
                                        <option value="SON">SON</option>
                                    </select>
                                </td>

                                <td>
                                    <a class="Delete" onclick="return DeleteOPDExpensePatient(@customer.ID , this)" href="javascript:;">Delete</a>

                                </td>
                            </tr>
                        }
                    </table>
                </section>
            </div>
        </div>
    }
    else
    {
        <span>No Record Found</span>

    }
    <hr style="height:3px;border:none;color:#333;background-color:#333;">
</div>
<div>
    <h5>PATIENT RECEIPT INFORMATION</h5>
    <hr style="height:2px;border:none;color:#333;background-color:#333;">
    @Html.ActionLink("Add Receipt Information", "Index", "OPDEXPENSEIMAGE", new { id = @ViewData["OPDEXPENSE_ID"] }, null)
    <br />
    @if (Model.listOPDEXPENSEIMAGE != null && Model.listOPDEXPENSEIMAGE.Count > 0)
    {
        <div class="row">
            <div class="col-md-offset-1 col-md-8">
                <section>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width:100px">Sr.</th>
                                <th style="width:150px">Image Name</th>
                                <th style="width:150px"></th>
                                <th style="width:150px">Expense Name</th>
                                <th style="width:150px">Expense Amount</th>
                                <th style="width:150px">Delete</th>

                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.listOPDEXPENSEIMAGE.Count; i++)
                            {
                                <tr>
                                    <td style="text-align: center;">@(i + 1)</td>

                                    <td style="text-align: center;">
                                        <div class="input-group" style="height:40px;">
                                            <i class="fa fa-2x fa-paperclip text-navy"></i>
                                            <a class="download-file1" href="@Url.Action("DownloadFile", "OPDEXPENSEs", new { fileId = @Model.listOPDEXPENSEIMAGE[i].IMAGE_ID })" target="_blank">
                                                @Model.listOPDEXPENSEIMAGE[i].IMAGE_NAME
                                            </a>
                                        </div>
                                    </td>

                                    <td style="text-align: center;">
                                        <div>
                                            <img src="@Url.Action("DownloadFile", "OPDEXPENSEs", new { fileId = @Model.listOPDEXPENSEIMAGE[i].IMAGE_ID })" width="100" height="100" />
                                        </div>
                                    </td>

                                    <td style="text-align: center;">
                                        <div>
                                            @Html.DisplayFor(model => @Model.listOPDEXPENSEIMAGE[i].NAME_EXPENSES)
                                        </div>
                                    </td>

                                    <td style="text-align: center;">
                                        <div>
                                            @Html.DisplayFor(model => @Model.listOPDEXPENSEIMAGE[i].EXPENSE_AMOUNT)
                                        </div>
                                    </td>
                                    <td>
                                        <a class="Delete" onclick="return DeleteOPDExpenseImage(@Model.listOPDEXPENSEIMAGE[i].IMAGE_ID , this)" href="javascript:;">Delete</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    }
    else
    {
        <span> No Record Found</span>
    }
    <hr style="height:3px;border:none;color:#333;background-color:#333;">
</div>




