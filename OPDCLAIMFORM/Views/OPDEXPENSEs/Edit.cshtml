@model OPDCLAIMFORM.Models.OPDEXPENSE_MASTERDETAIL

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>OPDEXPENSE</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.opdEXPENSE.OPDEXPENSE_ID)
    @Html.HiddenFor(model => model.opdEXPENSE.OPDTYPE)
    @Html.HiddenFor(model => model.opdEXPENSE.CREATED_DATE)
    <div class="form-group">
        @Html.LabelFor(model => model.opdEXPENSE.EMPLOYEE_NAME, "Employee Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.opdEXPENSE.EMPLOYEE_NAME, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly", @Value = (ViewBag.UserName) } })
